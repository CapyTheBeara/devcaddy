{
    "plugins": [
        {
            "name": "es6-transpiler",
            "command": "node",
            "args": "plugins/es6-transpiler.js"
        },
        {
            "name": "ember-index-injector",
            "command": "node",
            "args": "plugins/ember-index-injector.js"
        },
        {
            "name": "ember-template-compiler",
            "command": "node",
            "args": "plugins/ember-template-compiler.js",
            "pipeTo": "es6-transpiler"
        },
        {
            "name": "jshint",
            "command": "jshint",
            "args": "{{fileName}}",
            "logOnly": true
        },
        {
            "name": "sass",
            "command": "node",
            "args": "plugins/sass.js app/styles/sass app/styles/app.css",
            "logOnly": true
        }
    ],
    "files": [
        {
            "name": "my-app.js",
            "dir": "app",
            "ext": "js",
            "plugins": ["es6-transpiler", "jshint"]
        },
        {
            "name": "vendor.js",
            "dir": "vendor",
            "files": [
                "loader/loader.js",
                "jquery/dist/jquery.js",
                "handlebars/handlebars.js",
                "ember/ember.js",
                "ember-data/ember-data.js",
                "ember-cli-shims/app-shims.js",
                "ember-resolver/dist/modules/ember-resolver.js",
                "ember-load-initializers/ember-load-initializers.js"
            ]
        },
        {
            "name": "index.html",
            "dir": "app",
            "files": ["index.html"],
            "plugins": ["ember-index-injector"]
        },
        {
            "name": "my-app.css",
            "dir": "app/styles",
            "files": ["app.css"]
        }
    ],
    "watch": [
        {
            "dir": "app/templates",
            "ext": "hbs",
            "plugins": ["ember-template-compiler"]
        },
        {
            "dir": "app/styles/sass",
            "ext": "scss",
            "proxy": "app/styles/sass/app.scss",
            "plugins": ["sass"]
        }
    ]
}
